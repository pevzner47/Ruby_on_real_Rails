<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logget_in? %>
      <p class="nav testguru"><%= link_to 'TestGuru', root_path %></p>
      <p class="nav user"> Welcome, <b><%= current_user.name %></b> Guru</p>
      <p class="nav logout"><%= link_to 'Logout', logout_path %></p>
    <% end %>
    <%= yield %>
  </body>
  <%= render 'shared/footer' %>
</html>
